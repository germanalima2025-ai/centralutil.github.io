<div class="caixa">
<h2>Contador de Palavras</h2>
<textarea id="texto" placeholder="Digite seu texto aqui"></textarea>
<div class="resultado" id="resultado">Palavras: 0</div>
</div>

<script>
const texto = document.getElementById("texto");
const resultado = document.getElementById("resultado");

texto.addEventListener("input", function(){
let conteudo = texto.value.trim();
let palavras = conteudo ? conteudo.split(/\s+/).length : 0;
resultado.innerText = "Palavras: " + palavras;
});
</script>

